<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/tblCacheSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:descendantFocusability="beforeDescendants"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/expander"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:contentDescription="expander"
                    android:src="@drawable/navigation_collapse" />

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cache settings"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>

            <TableRow
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                
                <Button
                    android:id="@+id/btnClearCache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:text="Clear cache" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:descendantFocusability="beforeDescendants"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/expander"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:contentDescription="expander"
                    android:src="@drawable/navigation_collapse" />

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shuffle settings"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>

            <TableRow
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/switchShuffleByDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shuffle by default" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>